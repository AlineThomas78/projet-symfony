{% extends 'base.html.twig' %}

{% block title %} Reservation{% endblock %}


{% block stylesheets %} 

{{ encore_entry_link_tags('app') }}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/fullcalendar-scheduler@5.9.0/main.min.css"
integrity="sha256-N4huVLjch/cYU8fcsyfMDy3iz7YzxY/Z1Btcj62y7ZE=" crossorigin="anonymous">

<style>
    #calendrier{
        width: 80px;
        margin: auto;
    }
</style>
{% endblock %}

{% block body %}
<br><br><br><br><br>

<h1>Bonjour</h1>
    <div id="calendrier">    
    </div>

    <br><br><br><br><br><br>
   
{% endblock %}


{% block javascripts %} 

<script src="https://cdn.jsdelivr.net/npm/fullcalendar-scheduler@5.9.0/main.min.js"
          integrity="sha256-aQ3VdEtGV6MDaxbR989+aWkW/PRGEvF2YW7mCUg5vjI=" crossorigin="anonymous">
</script>

<script>

        window.onload = () => {
            let calendarElt = document.querySelector("#calendrier")

            let calendar = new FullCalendar.Calendar(calendarElt, {
                initialView: 'dayGridMonth'
            })

            calendar.render()
        }
</script>

{% endblock %}

